<div class="chat-container">
  <aside class="sidebar">
    <h3>Online</h3>
    <ul id="users"></ul>
  </aside>

  <main class="chat">
    <ul id="messages"></ul>

    <div class="input-area">
      <input
        id="message-input"
        type="text"
        placeholder="Digite sua mensagem..."
      />
      <button onclick="sendMessage()">Enviar</button>
    </div>
  </main>
</div>
